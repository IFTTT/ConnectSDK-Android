<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.ifttt.ui.IftttConnectButton
        android:id="@+id/ifttt_connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <TextSwitcher
        android:id="@+id/ifttt_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ifttt_loading_status_margin_top"
        android:layout_marginStart="@dimen/ifttt_space_small"
        android:layout_marginEnd="@dimen/ifttt_space_small"
        android:layout_marginBottom="@dimen/ifttt_space_small"
        android:background="?selectableItemBackground"
        android:inAnimation="@anim/ifttt_helper_text_in"
        android:outAnimation="@anim/ifttt_helper_text_out"
        android:padding="@dimen/ifttt_space_small">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/avenir_next_ltpro_demi"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/ifttt_helper_text_line_spacing"
            android:textColor="@color/ifttt_footer_text_black"
            android:textColorLink="@color/ifttt_footer_text_black"
            android:textSize="@dimen/ifttt_helper_text_size"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/avenir_next_ltpro_demi"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/ifttt_helper_text_line_spacing"
            android:textColor="@color/ifttt_footer_text_black"
            android:textColorLink="@color/ifttt_footer_text_black"
            android:textSize="@dimen/ifttt_helper_text_size"/>

    </TextSwitcher>

    <TextView
        android:id="@+id/ifttt_loading_view"
        android:layout_width="@dimen/ifttt_connect_button_width"
        android:layout_height="@dimen/ifttt_connect_button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ifttt_space_med"
        android:background="@drawable/button_background_default"
        android:gravity="center"
        android:text="@string/ifttt_loading"
        android:textColor="@android:color/white"
        android:textSize="@dimen/ifttt_connect_text_size"
        app:fontFamily="@font/avenir_next_ltpro_bold"/>

</merge>
